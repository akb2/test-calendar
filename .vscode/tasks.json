{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev-frontend",
      "type": "npm",
      "script": "dev",
      "path": "./testcalendar.client",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": [
          {
            "regexp": "^(\\S[^:]+):(\\d+):(\\d+):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "vite v",
          "endsPattern": "Local:"
        }
      }
    },
    {
      "label": "terminate dev-frontend",
      "type": "shell",
      "command": "echo ${input:terminateDevFrontend}",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "close": true
      }
    }
  ],
  "inputs": [
    {
      "id": "terminateDevFrontend",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "dev-frontend"
    }
  ]
}